generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// A user signed up with google
model User {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  email            String   @unique
  name             String
  image            String // Profile image (comes from Google account)
  visitedCountries String[] // Array of CCN3 codes (ISO 3166-1 alpha-3)
}

model Friendship {
  id     String @id @default(auto()) @map("_id") @db.ObjectId()
  userA  String @db.ObjectId()
  userB  String @db.ObjectId()
  status String @default("pending") // pending | accepted

  @@index([userA, userB], map: "user_a_user_b_index")
}
